#!/bin/bash
# Script pour nettoyer les fichiers temporaires macOS (.!*)
# Ces fichiers sont cr√©√©s par macOS lors de l'√©dition de fichiers

set -e

# Couleurs pour l'affichage
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}üßπ Nettoyage des fichiers temporaires macOS${NC}"
echo -e "${BLUE}üìÇ R√©pertoire: $(pwd)${NC}"

# Trouver tous les fichiers temporaires macOS
echo -e "${YELLOW}üîç Recherche des fichiers temporaires...${NC}"

# Utiliser find pour compter et lister les fichiers
TEMP_FILES=$(find . -name ".!*" -type f 2>/dev/null | wc -l)

if [ "$TEMP_FILES" -eq 0 ]; then
    echo -e "${GREEN}‚úÖ Aucun fichier temporaire macOS trouv√©.${NC}"
    exit 0
fi

echo -e "${YELLOW}üîç $TEMP_FILES fichier(s) temporaire(s) macOS trouv√©(s)${NC}"

# Mode simulation par d√©faut
DRY_RUN=true

# V√©rifier si on est en mode ex√©cution
if [ "$1" = "--execute" ]; then
    DRY_RUN=false
    echo -e "${RED}‚ö†Ô∏è  Mode EX√âCUTION - Les fichiers seront supprim√©s d√©finitivement!${NC}"
    read -p "Continuer? (oui/non): " -r
    if [[ ! $REPLY =~ ^[Oo][Uu][Ii]$ ]] && [[ ! $REPLY =~ ^[Oo]$ ]] && [[ ! $REPLY =~ ^[Yy][Ee][Ss]$ ]] && [[ ! $REPLY =~ ^[Yy]$ ]]; then
        echo -e "${RED}‚ùå Op√©ration annul√©e.${NC}"
        exit 1
    fi
else
    echo -e "${YELLOW}üí° Mode simulation activ√©. Pour supprimer r√©ellement, relancez avec --execute${NC}"
fi

# Supprimer les fichiers
DELETED_COUNT=0
ERROR_COUNT=0

while IFS= read -r -d '' file; do
    if [ "$DRY_RUN" = true ]; then
        echo -e "  üìÑ $file (serait supprim√©)"
    else
        if rm "$file" 2>/dev/null; then
            echo -e "  üóëÔ∏è  $file (supprim√©)"
            ((DELETED_COUNT++))
        else
            echo -e "  ‚ùå $file (erreur de suppression)"
            ((ERROR_COUNT++))
        fi
    fi
done < <(find . -name ".!*" -type f -print0 2>/dev/null)

if [ "$DRY_RUN" = true ]; then
    echo -e "${YELLOW}üí° Mode simulation termin√©. Pour supprimer r√©ellement, relancez avec --execute${NC}"
else
    echo -e "${GREEN}‚úÖ Nettoyage termin√©:${NC}"
    echo -e "   - ${GREEN}$DELETED_COUNT fichier(s) supprim√©(s)${NC}"
    if [ "$ERROR_COUNT" -gt 0 ]; then
        echo -e "   - ${RED}$ERROR_COUNT erreur(s)${NC}"
    fi
fi
